= form_for(@article, html: {multipart: true}) do |f|
  = f.label :title
  = f.text_area :title
  %br/
  = f.label :body
  = f.text_area :body
  %br/
  = f.label :tag_list
  = f.text_field :tag_list
  %br/
  - if @article.image.exists?
    = image_tag @article.image.url
  = f.label :image, "Attach an image"
  %br/
  = f.file_field :image
  %br/
  = f.submit 
